<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_200sdp"
    android:layout_height="@dimen/_120sdp"
    android:background="@color/nav_bar_menu"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:id="@+id/hdr_layout_view_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_30sdp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/circle"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/btn_login"
            fresco:roundAsCircle="true" />

        <TextView
            android:id="@+id/hdr_user_nmae"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_toRightOf="@+id/circle"
            android:text="Mas Andy"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

        <com.techno.matrimonial.CustomUi.MyTitleTextView
            android:id="@+id/hdr_view_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hdr_user_nmae"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@+id/circle"
            android:text="View Profile"
            android:textSize="@dimen/_10sdp" />
    </RelativeLayout>
</LinearLayout>
